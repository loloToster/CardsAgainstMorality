generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

model User {
    id         Int        @id @default(autoincrement())
    name       String
    picture    String?
    lastUsed   DateTime?  @map("last_used")
    strategyId String     @map("strategy_id")
    likedPacks CardPack[]

    @@map("users")
}

model CardPack {
    id         Int           @id @default(autoincrement())
    name       String
    type       String
    bundle     String?
    icon       String?
    color      String?
    tags       CardPackTag[]
    blackCards BlackCard[]
    whiteCards WhiteCard[]
    likedBy    User[]

    @@map("card_packs")
}

model CardPackTag {
    id    Int        @id @default(autoincrement())
    name  String
    packs CardPack[]

    @@map("card_pack_tags")
}

model BlackCard {
    id     Int      @id @default(autoincrement())
    text   String
    pick   Int?
    draw   Int?
    packId Int      @map("pack_id")
    pack   CardPack @relation(fields: [packId], references: [id])

    @@map("black_cards")
}

model WhiteCard {
    id     Int      @id @default(autoincrement())
    text   String
    packId Int      @map("pack_id")
    pack   CardPack @relation(fields: [packId], references: [id])

    @@map("white_cards")
}
